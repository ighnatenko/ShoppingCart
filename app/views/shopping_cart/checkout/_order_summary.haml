.general-text-align
  %p.in-gold-500.font-18= t('cart.order_summary')
  %table.general-summary-table
    %tr
      %td
        %p.font-16= "#{t('cart.subtotal')}:"
      %td
        %p.font-16= "€#{order.decorate.subtotal}"
    %tr
      %td
        %p.font-16= "#{t('cart.coupon')}:"
      %td
        %p.font-16= "€#{order.decorate.coupon_discount}"
    %tr
      %td
        %p.font-16= "#{t('cart.shipping')}:"
      %td
        %p.font-16.summary-shipping= "€#{order.decorate.shipping}"    
    %tr
      %td
        %strong.font-18= "#{t('cart.order_total')}:"
      %td
        %strong.font-18.summary-total= "€#{order.decorate.order_total}"