%h1.general-title-margin= t('checkout.checkout')
= render 'steps', number: 3
%h3.general-subtitle= t('cart.credit_card.title')
= form_tag(wizard_path, method: :put, class: 'max-600 mb-80') do
  = simple_fields_for(@form) do |f|
    .form-group
      = f.input :number, input_html: { class: 'form-control' }, label: t('checkout.card_number'),
      placeholder: t('checkout.card_number'), label_html: { class: 'control-label input-label' }
    .row
      .col-sm-6
        .form-group
          = f.input :card_name, input_html: { class: 'form-control' }, label: t('checkout.card_name'),
          placeholder: t('checkout.card_name'), label_html: { class: 'control-label input-label' }
      .col-sm-3
        .form-group
          = f.input :expiration_date, input_html: { class: 'form-control' }, label: t('checkout.expiration_date'),
          placeholder: t('checkout.expiration_date'), label_html: { class: 'control-label input-label' }
      .col-sm-3
        .form-group.relative
          = f.input :cvv, input_html: { class: 'form-control' }, label: t('checkout.cvv'),
          placeholder: t('checkout.cvv'), label_html: { class: 'control-label input-label' }
          %i.fa.fa-question-circle.general-form-help{'data-toggle': 'tooltip', 'data-placement': :top, title: t('checkout.cvv_tooltip')}
  = render 'order_summary', order: @order
  = submit_tag t('checkout.save'), class:'btn btn-default center-block mb-20'