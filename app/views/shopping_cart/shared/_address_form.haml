= f.hidden_field :address_type, value: address_type
.form-group
  = f.input :firstname, input_html: { class: 'form-control' }, 
    label: t('address.inputs_fields.first_name'),
    placeholder: t('address.inputs_fields.first_name'),
    label_html: { class: 'control-label input-label' }
.form-group
  = f.input :lastname, input_html: { class: 'form-control' }, 
    label: t('address.inputs_fields.last_name'),
    placeholder: t('address.inputs_fields.last_name'),
    label_html: { class: 'control-label input-label' }
.form-group
  = f.input :address, 
      input_html: { class: 'form-control' }, 
      label: t('address.inputs_fields.address'),
      placeholder: t('address.inputs_fields.address'), 
      label_html: { class: 'control-label input-label' }
.form-group
  = f.input :city, 
      input_html: { class: 'form-control' }, 
      label: t('address.inputs_fields.city'),
      placeholder: t('address.inputs_fields.city'), 
      label_html: { class: 'control-label input-label' }
.form-group
  = f.input :zipcode, 
      input_html: { class: 'form-control' }, 
      label: t('address.inputs_fields.zip'),
      placeholder: t('address.inputs_fields.zip'), 
      label_html: { class: 'control-label input-label' }
.form-group
  = f.input :country, 
      input_html: { class: 'form-control' }, 
      label: t('address.inputs_fields.country'),
      placeholder: t('address.inputs_fields.country'), 
      label_html: { class: 'control-label input-label' }
.form-group
  = f.input :phone, 
      input_html: { class: 'form-control' }, 
      label: t('address.inputs_fields.phone'),
      placeholder: t('address.inputs_fields.phone_example'), 
      label_html: { class: 'control-label input-label' }
- if visible_submit_btn
  .text-center.general-text-align
    = f.button :submit, t('settings.save'), class: 'btn btn-default'